{% extends ("AvrNetIoBundle::base.html.twig") %}


{% block header %}
    <script type="text/javascript">
        $(document).ready(function () {

            $("select").on("change", function (event, ui) {
                var inputName = $(this).attr('name').substr(7);
                $.ajax({
                    url: "/setport/" + inputName + '/' + $(this).val(),
                    context: ''
                }).done(function() {

                });
            });
        });
    </script>
    <div data-role="header">
        <h1>Werte des Avrs</h1>
    </div>
{% endblock header %}

{% block content %}
    <style type="text/css">
        .ui-li .ui-btn-inner a.ui-link-inherit, .ui-li-static.ui-li {
            display: block !important;
            padding: 0.9em 75px 0.9em 15px !important;
        }

        div.ui-slider-switch {
            position: absolute !important;
            right: 0 !important;
            top: 0.5em;
        }

    </style>
    <ul data-role="listview" data-inset="true">
        {% for i in 1..8 %}
            <li data-role="fieldcontain">
                <label for="output{{ i }}">Output {{ i }}</label>
                <select name="output-{{ i }}" id="output-{{ i }}" data-role="slider" data-mini="true">
                    <option value="0">Off</option>
                    <option value="1" {% if avr.output(i) == 1 %}selected="selected"{% endif %}>On</option>
                </select>
            </li>
        {% endfor %}
    </ul>
