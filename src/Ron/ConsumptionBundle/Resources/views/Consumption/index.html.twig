{% extends 'RonConsumptionBundle::base.html.twig' %}

{% block title %}<h1>{% trans %}Consumption list{% endtrans %}</h1>{% endblock title %}
{% block content %}


    <table class="records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Energy{% endtrans %}</th>
                <th>{% trans %}Water{% endtrans %}</th>
                <th>{% trans %}Gas{% endtrans %}</th>
                <th>{% trans %}Createdate{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('consumption_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.energy }}</td>
                <td>{{ entity.water }}</td>
                <td>{{ entity.gas }}</td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('consumption_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('consumption_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('consumption_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
