{% extends ("RonRaspberryPiBundle::base.html.twig") %}
{% block title %}<h1>Login</h1>{% endblock %}
{% block content %}
    {% if error %}
        <div class="error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("_login_check") }}" method="post" id="login">
        <fieldset>
            <div>
                <label for="username">{% trans %}Username{% endtrans %}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>

            <div>
                <label for="password">{% trans %}Password{% endtrans %}</label>
                <input type="password" id="password" name="_password"/>
            </div>

            <input type="submit" class="symfony-button-grey" value="LOGIN"/>
        </fieldset>
    </form>
{% endblock %}
