</head>

<body>
<header class="top" role="header">
    <div class="container-fluid">
        {% block page %}
        {% block header %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse"
                                data-target=".navbar-inverse-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('avr_net_io_homepage') }}">Raspberry Pi</a>
                    </div>
                    <div class="navbar-collapse collapse navbar-inverse-collapse">
                        {{ knp_menu_render('RonRaspberryPiBundle:Builder:mainMenu', { 'style': 'navbar' }) }}
                        {{ knp_menu_render('RonRaspberryPiBundle:Builder:menuRight', { 'style': 'navbar-right' }) }}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</header>
{% endblock header %}

{% block content %}
    {{ form_start(form) }}

    <fieldset>
        {{ form_row(form.switch1 ) }}
        {{ form_row(form.switch2 ) }}
        {{ form_row(form.switch3 ) }}
        {{ form_row(form.switch4 ) }}
    </fieldset>

    {{ form_end(form) }}
{% endblock content %}

{% block footer %}
    <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script src="{{ asset('/js/bootstrap.js') }}"></script>
    <script src="{{ asset('/js/bootstrap-switch.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(":checkbox").bootstrapSwitch();
            $(".alert").slideDown(1000);
            window.setTimeout(function () {
                $(".alert").slideUp(1000);
            }, 3000);
        })
    </script>

{% endblock footer %}
{% endblock page %}
</div>
</body>
</html>
