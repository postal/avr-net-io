<!DOCTYPE html>
<html>
<head>
    <title>Raspberry Pi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('/css/bootstrap.slate.min.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('/css/bootstrap-switch.css') }}" rel="stylesheet" media="screen">

    <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
    <script type="text/javascript">
        $(document).ready(function () {

            $("select").on("change", function (event, ui) {
                var inputName = $(this).attr('name').substr(7);
                $.ajax({
                    url: "/setport/" + inputName + '/' + $(this).val(),
                    context: ''
                }).done(function () {

                });
            });
        });
    </script>
    {% block javascript %}
    {% endblock javascript %}
    {% block style %}
    {% endblock style %}
</head>

<body>

{% block page %}
{% block header %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('avr_net_io_homepage') }}">Raspberry Pi</a>
        </div>
        <div class="navbar-collapse collapse navbar-inverse-collapse">
            {{ knp_menu_render('RonRaspberryPiBundle:Builder:mainMenu', { 'style': 'navbar' }) }}
            {{ knp_menu_render('RonRaspberryPiBundle:Builder:menuRight', { 'style': 'navbar-right' }) }}
        </div>
    </div>
{% endblock header %}
<div class="container">
{% block content %}
    {{ form_start(form) }}

    <fieldset>
        {{ form_row(form.switch1 ) }}
        {{ form_row(form.switch2 ) }}
        {{ form_row(form.switch3 ) }}
        {{ form_row(form.switch4 ) }}
    </fieldset>

    {{ form_end(form) }}
{% endblock content %}
</div>
{% block footer %}
    <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script src="{{ asset('/js/bootstrap.js') }}"></script>
    <script src="{{ asset('/js/bootstrap-switch.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("[name='raspi_switch[switch1]']").bootstrapSwitch();
            $("[name='raspi_switch[switch2]']").bootstrapSwitch();
            $("[name='raspi_switch[switch3]']").bootstrapSwitch();
            $("[name='raspi_switch[switch4]']").bootstrapSwitch();
        })

    </script>
{% endblock footer %}
{% endblock page %}
</body>
</html>
