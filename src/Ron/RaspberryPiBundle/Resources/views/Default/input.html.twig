{% extends ("RonRaspberryPiBundle::base.html.twig") %}

{% block title %}<h1>{% trans %}Analog inputs Avr-Net-Io{% endtrans %}</h1>{% endblock title %}

{% block content %}
    <style type="text/css">
        .ui-li .ui-btn-inner a.ui-link-inherit, .ui-li-static.ui-li {
            display: block !important;
            padding: 0.9em 75px 0.9em 15px !important;
        }

        div.ui-slider-switch {
            position: absolute !important;
            right: 0 !important;
            top: 0.5em;
        }

    </style>
    <div>
        <table class="col-xs-12 col-md-6 col-md-offset-3 table-condensed table-striped">
            <thead>
            <tr>
                <th class="col-sm-6 col-md-3">Ort</th>
                <th class="col-sm-6 col-md-3">Wert</th>
            </tr>
            </thead>
            <tbody>
            {% if temp != '' %}
                <tr>
                    <td>Temperatur Serverschrank</td>
                    <td>
                        <a href="{{ path('avr_output_temp') }}">{{ temp }} Â°C</a>
                    </td>
                </tr>
            {% endif %}
            {% if pressure != '' %}
                <tr>
                    <td>Luftdruck Serverschrank</td>
                    <td>
                        <a href="{{ path('avr_output_temp') }}">{{ pressure }} hPa</a>
                    </td>
                </tr>
            {% endif %}
            {% if motion != '' %}
                <tr>
                    <td>Bewegung im HWR</td>
                    <td>
                        <a href="{{ path('ron_raspberry_pi_pir', { 'period': 'day' }) }}">
                            {% if motion == 1 %}Bewegung erkannt{% else %}Keine Bewegung erkannt{% endif %}</a>
                    </td>
                </tr>
            {% endif %}
            {% if false == avr %}
                <tr>
                    <td>Verbindung zu Avr</td>

                    <td>fehlgeschlagen</td>
                </tr>
            {% else %}
                {% for i in 1..4 %}
                    <tr>
                        <td>Eingang {{ i }}</td>
                    </tr>
                    <tr>
                        <td>{{ avr.adc(i) }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

    <div class="ui-grid-a ui-responsive">

    </div>
{% endblock %}
